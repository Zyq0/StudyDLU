page {
  background: rgba(250, 250, 250, 1);
}

.login {
  padding: 64rpx;
  margin-top: 60rpx;
}

.form-item {
  position: relative;
  width: 100%;
  height: 98rpx;
  opacity: 1;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(232, 232, 232, 0.86);
  box-shadow: 0rpx 0rpx 2rpx -4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx 40rpx;
}

.form-item image {
  width: 32rpx;
  height: 32rpx;
}

.form-item input {
  width: 100%;
  height: 100%;
  flex: 1;
  margin-left: 20rpx;
  font-size: 36rpx;
  font-weight: 400;
}

.login .cu-btn {
  width: 100%;
  height: 98rpx;
  border-radius: 60rpx;
  background: linear-gradient(90deg,
      rgba(193, 239, 245, 0.9) 0%,
      rgba(10, 232, 240, 1) 1%,
      rgba(136, 242, 223, 1) 100%);
  box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(0, 0, 0, 0.1);
  color: #fff;
  border: 0;
  margin-top: 100rpx;
}

.header {
  display: flex;
  justify-content: center;
  margin-top: 106rpx;
}

.header image {
  width: 288rpx;
  height: 176rpx;
}

.checkbox-item {
  font-size: 32rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
}